    "version": "2.0.0",
    "tasks": [
        {
            "label": "config build type(x86)",
            "type": "shell",
            "command": "xmake config -y  -P . -p windows -m debug -a x86 -o build",
        },
        {
            "label": "config build type(x64)",
            "type": "shell",
            "command": "xmake config -y  -P . -p windows -m debug -a x64 -o build",
        },
        
        {
            "label": "build graphics demo(x86)",
            "type": "shell",
            "command": "xmake build -y  -P . -w graphics",
            "dependsOn": ["config build type(x86)"]
        },
        {
            "label": "build graphics demo(x64)",
            "type": "shell",
            "command": "xmake build -y  -P . -w graphics",
            "dependsOn": ["config build type(x64)"]
        },

        {
            "label": "build samui editor(x86)",
            "type": "shell",
            "command": "xmake build -y  -P . -w samui-editor",
            "dependsOn": ["config build type(x86)"]
        },
        {
            "label": "build samui editor(x64)",
            "type": "shell",
            "command": "xmake build -y  -P . -w samui-editor",
            "dependsOn": ["config build type(x64)"]
        },
    ]
}